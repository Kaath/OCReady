## Simple SDL mini   code

CC=gcc

CPPFLAGS= `pkg-config --cflags sdl2` -MMD
CFLAGS= -Wall -Wextra -std=c99 -O3 -g
LDFLAGS=
LDLIBS= `pkg-config --libs sdl2` -lSDL2_image

OBJ= pixel_operations.o main.o segmentation.o Sobel.o sdl_OP.o resize.o
DEP= ${OBJ:.o=.d}

all: main

main: ${OBJ}

clean:
	${RM} ${OBJ} ${DEP} *~ *d
	${RM} main

run:
	./main ${ARGS}
	make clean

-include ${DEP}

# END
